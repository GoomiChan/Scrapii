            region-topleft:TL;
            region-top:TC;
            region-topright:TR;
            region-left:CL;
            region-center:CC;
            region-right:CR;
            region-bottomleft:BL;
            region-bottom:BC;
            region-bottomright:BR;
            padding:6;
        </StyleSheet>
