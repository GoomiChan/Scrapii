    <Styles>
        <StyleSheet name="panelBG" parent="PanelBackDrop">
            clip-children:false;
            alpha:0.7;
			tint:#222222;
        </StyleSheet>
        
        <StyleSheet name="HeaderText">
            font:Demi_9;
            halign: center;
            valign: center;
            color: textColor;
        </StyleSheet>
        
        <StyleSheet name="FadedBorder" parent="ButtonSolid">
            tint:#121318;
            exposure:1.0;
        </StyleSheet>
        
        <StyleSheet name="FilterRowText">
            font:Demi_10;
            halign: left;
            valign: center;
            color: textColor;
        </StyleSheet>
		
		<StyleSheet name="AddFilterText" parent="FilterRowText">
            halign: center;
            valign: center;
        </StyleSheet>
		
		<StyleSheet name="AddFilterDesc">
            font:Demi_12;
            halign: center;
            valign: center;
            color: textColor;
        </StyleSheet>
		
		<StyleSheet name="TextInput" parent="#TextInput">
			texture:colors;
			region:transparent;
            font:Demi_12;
            halign: center;
            valign: center;
            color: textColor;
			maxlen:3;
			multiline:false;
			numeric:true;
        </StyleSheet>
		
		<StyleSheet name="TextInputText" parent="TextInput">
            halign: left;
			maxlen:50;
			numeric:false;
        </StyleSheet>
		
		<StyleSheet name="Reviewlist">
            font:Demi_12;
            halign: left;
            valign: center;
            color: textColor;
        </StyleSheet>

        <StyleSheet name="ScrapiiWinBD" parent="">
